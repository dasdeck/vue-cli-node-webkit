{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "nwjs",
      "request": "launch",
      "name": "Launch NWjs",
      "nwjsVersion": "any",
      "webRoot": "${workspaceRoot}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server",
      "program": "${workspaceFolder}/src/server.js"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "client",
      "runtimeExecutable": "${workspaceRoot}/node_modules/nw/bin/nw",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "cwd": "${workspaceRoot}",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceRoot}",
      "sourceMaps": true
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceRoot}"
    }
  ]
}
